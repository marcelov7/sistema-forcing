# EXEMPLO DE CONFIGURAÇÃO PARA PRODUÇÃO COM HOSTINGER VPS
# Copie este arquivo para .env e ajuste os valores

APP_NAME="Sistema de Forcing"
APP_ENV=production
APP_KEY=base64:GERE_UMA_NOVA_CHAVE_COM_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://seudominio.com

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# LOGS
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# DATABASE (SQLite recomendado para VPS Hostinger)
DB_CONNECTION=sqlite
# Para MySQL/MariaDB na Hostinger:
# DB_CONNECTION=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=nome_do_banco
# DB_USERNAME=usuario_mysql
# DB_PASSWORD=senha_mysql

# SESSION
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.seudominio.com

# CACHE & QUEUE
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# REDIS (se disponível na Hostinger)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# E-MAIL HOSTINGER VPS - CONFIGURAÇÃO PRINCIPAL
MAIL_MAILER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=465
MAIL_USERNAME=sistema@seudominio.com
MAIL_PASSWORD=SUA_SENHA_DO_EMAIL_AQUI
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS="sistema@seudominio.com"
MAIL_FROM_NAME="Sistema de Forcing"

# CONFIGURAÇÕES ADICIONAIS DE E-MAIL
MAIL_REPLY_TO_ADDRESS="noreply@seudominio.com"
MAIL_REPLY_TO_NAME="Sistema de Forcing - Não Responda"

# AWS S3 (opcional para upload de arquivos)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# CONFIGURAÇÕES DE PRODUÇÃO
VITE_APP_NAME="${APP_NAME}"

# CONFIGURAÇÕES ESPECÍFICAS DO SISTEMA DE FORCING
FORCING_EMAIL_DAILY_LIMIT=85
FORCING_EMAIL_HOSTINGER_LIMIT=100
FORCING_EMAIL_BUFFER=15
FORCING_EMAIL_RETRY_ATTEMPTS=3
FORCING_EMAIL_RETRY_DELAY=300

# TIMEZONE
APP_TIMEZONE=America/Sao_Paulo

# CONFIGURAÇÕES DE SEGURANÇA
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict
