# CONFIGURAÇÃO PARA PRODUÇÃO - CLOUDPANEL MYSQL
# Copie este arquivo para .env no servidor e ajuste as credenciais

APP_NAME="Sistema de Forcing"
APP_ENV=production
APP_KEY=base64:GERE_UMA_NOVA_CHAVE_COM_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://seudominio.com

# LOCALIZAÇÃO
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR
APP_TIMEZONE=America/Sao_Paulo

# CONFIGURAÇÕES DE PRODUÇÃO
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# LOGS
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ========================================
# MYSQL - CLOUDPANEL (CONFIGURAR AQUI)
# ========================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=forcingdb
DB_USERNAME=userforcing
DB_PASSWORD=M@rcelo189@3033

# CONFIGURAÇÕES MYSQL IMPORTANTES
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# SESSÕES
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.seudominio.com

# CACHE & QUEUE
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# REDIS (se disponível no CloudPanel)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========================================
# E-MAIL HOSTINGER VPS (JÁ CONFIGURADO)
# ========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=465
MAIL_USERNAME=sistema@devaxis.com.br
MAIL_PASSWORD=M@rcelo1809@3033
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS="sistema@devaxis.com.br"
MAIL_FROM_NAME="Sistema de Forcing - Devaxis"

# CONFIGURAÇÕES ADICIONAIS DE E-MAIL
MAIL_REPLY_TO_ADDRESS="noreply@devaxis.com.br"
MAIL_REPLY_TO_NAME="Sistema de Forcing - Não Responda"

# AWS S3 (opcional para upload de arquivos)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# CONFIGURAÇÕES ESPECÍFICAS DO SISTEMA DE FORCING
FORCING_EMAIL_DAILY_LIMIT=85
FORCING_EMAIL_HOSTINGER_LIMIT=100
FORCING_EMAIL_BUFFER=15
FORCING_EMAIL_RETRY_ATTEMPTS=3
FORCING_EMAIL_RETRY_DELAY=300

# CONFIGURAÇÕES DE SEGURANÇA
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# VITE
VITE_APP_NAME="${APP_NAME}"

# ========================================
# INSTRUÇÕES DE CONFIGURAÇÃO
# ========================================
# 1. No CloudPanel, crie um banco MySQL
# 2. Anote: nome do banco, usuário e senha
# 3. Substitua as variáveis DB_* acima
# 4. Execute: php artisan key:generate
# 5. Execute: php artisan migrate --force
# 6. Execute: php artisan db:seed (opcional)
# 7. Configure permissões da pasta storage/
# 8. Configure permissões da pasta bootstrap/cache/
# ========================================
